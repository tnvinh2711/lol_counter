<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zinzin.lolcounter.utils.RoundedCornerLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="280dp"
            android:scaleType="centerCrop"
            android:layout_height="210dp"
            android:id="@+id/img_header_dialog"
            android:src="@mipmap/ads_header"
            />

            <TextView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_dialog_txt_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="Xin Chào"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_dialog_txt_msg"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorPrimary"
                android:text="App tổng hợp tất cả thông tin những vị tướng khắc chế nhau trong game LMHT, bạn có thể tham khảo để lựa chọn tướng tốt hơn trong những trận đấu.\n\nTrong App này có chèn quảng cáo, không có tiền thì làm app làm sao ^^\n\nXin cảm ơn!!!"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/welcome_btn_start"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:elevation="10dp"
                android:padding="10dp"
                android:background="@drawable/shadow_background"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"/>
    </com.zinzin.lolcounter.utils.RoundedCornerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>